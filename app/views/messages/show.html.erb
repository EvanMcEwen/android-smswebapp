<div class="messages">
<% for message in @messages %>
  <% if message.origin.eql?("DEVICE") %>
<p class="msg msg-to"><%= message.message %><small><br/><%= Time.at(Integer(message.timestamp)/1000) %></small></p>
  <% else %>
<p class="msg"><%= message.message %><small><br/><%= Time.at(Integer(message.timestamp)/1000) %></small></p>
  <% end %>
<% end %>

<% for message in @outmessages %>
<p class="msg msg-to"><%= message.message %><small><br/>Waiting for device to send...</small></p>
<% end %>
</div>
<div class="reply-area">
    <div class="control-group">
      <div class="controls">
        <div class="input-append input-prepend">
           <span class="add-on"><i class="icon-envelope"></i></span><input class="span11" id="messageToSend" size="16" type="text"><a href="javascript:sendMessage(<%= @number %>)" class="btn btn-success" type="button">Send</a>
        </div>
      </div>
    </div>
</div>